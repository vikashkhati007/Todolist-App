<%- include("header") -%>
<div class="box" id = "heading">
    <h1> <%= listtitle %> </h1>
</div>
<div class="box">
       <% newListitems.forEach(function(items){ %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%=items._id%>" onChange="this.form.submit()">
                <p><%= items.name %></p>
            </div>
            <input type="hidden" name="titlename" value="<%= listtitle %> ">
            </form>
            <%})%>
        <form action="/" method="post" class="item">
            <input type="text" name="newListitem" placeholder="enter your new item" autocomplete="off""/>
            <button type="submit" name = "listname" value ="<%= listtitle %>" >+</button>
        </form>
</div>
<div class="box" id = "heading">
</div>
